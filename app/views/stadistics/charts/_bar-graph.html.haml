.col-md-4.col-sm-4.col-xs-12
  .x_panel.tile.fixed_height_320.overflow_hidden
    .x_title
      / Categoria del grafico (Productos, productores o centros de acopio)
      %h2 Producto mÃ¡s vendido
      %ul.nav.navbar-right.panel_toolbox
        %li
          %a.collapse-link
            %i.fa.fa-chevron-up
        %li
          %a.close-link
            %i.fa.fa-close
      .clearfix
    .x_content
      .widget_summary
        .w_left.w_25
          /Nombre del primero de la lista
          %span Zanahoria
        .w_center.w_55
          .progress
            /En el "width: " es donde se modifica el por ciento o lo lleno de la barra
            .progress-bar.bg-green{"aria-valuemax" => "100", "aria-valuemin" => "0", "aria-valuenow" => "60", :role => "progressbar", :style => "width: 66%;"}
              %span.sr-only
        .w_right.w_20
          /La cantidad
          %span #{@cant}
        .clearfix
      .widget_summary
        .w_left.w_25
          %span Papas
        .w_center.w_55
          .progress
            .progress-bar.bg-green{"aria-valuemax" => "100", "aria-valuemin" => "0", "aria-valuenow" => "60", :role => "progressbar", :style => "width: 45%;"}
              %span.sr-only
        .w_right.w_20
          %span 14Kg
        .clearfix
      .widget_summary
