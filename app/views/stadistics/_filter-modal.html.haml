#filterModal.modal.fade.bd-example-modal-lg{:role => "dialog"}
  .modal-dialog.modal-lg
    / Modal content
    .modal-content
      .modal-header
        %button.close{"data-dismiss" => "modal", :type => "button"} Ã—
        %h4.modal-title.text-center 
          = t('stadistics.new_chart')
        .nav-center
          %ul.nav.nav-tabs.center-pills
            %li.active{:role => "presentation" , :id => "product-modal-button" }
              %a{:href => "#product-tab","data-toggle" => "tab"}
                = t('stadistics.products')
            %li{:role => "presentation", :id => "producer-modal-button"}
              %a{:href => "#producer-tab", "data-toggle" => "tab"}
                = t('stadistics.producers')
            %li{:role => "presentation", :id => "hubs-modal-button"}
              %a{:href => "#hubs-tab", "data-toggle" => "tab"}
                = t('stadistics.hubs')
            %li{:role => "presentation", :id => "user-modal-button"}
              %a{:href => "#user-tab", "data-toggle" => "tab"}
                = t('stadistics.users')
      .modal-body
        / Calendario Inicio
        .tab-content
          #product-tab.tab-pane.active
            =form_tag 'index',:remote => true do
              .container
                .row
                  .col-md-8.col-sm-10.col-xs-12.col-md-offset-2
                    .form-group
                      %label.col-md-12.col-xs-4.control-label.text-center.h4{:for => "dtp_input1"}
                        = t('stadistics.initial_date')
                      .input-group.date.form_date.col-md-12{"data-date" => "", "data-date-format" => "yyyy-mm-dd", "data-link-field" => "dtp_input2", "data-link-format" => "yyyy-mm-dd"}
                        = text_field_tag :initial_date ,'' ,:class => "form-control", :readonly => true
                        %span.input-group-addon
                          %span.glyphicon.glyphicon-remove
                        %span.input-group-addon
                          %span.glyphicon.glyphicon-calendar
                      %input#dtp_input1{:type => "hidden", :value => ""}/
                      %br/
              .container
                .row
                  .col-md-8.col-sm-10.col-xs-12.col-md-offset-2
                    .form-group
                      %label.col-md-12.col-xs-4.control-label.text-center.h4{:for => "dtp_input2"}
                        = t('stadistics.final_date') 
                      .input-group.date.form_date.col-md-12{"data-date" => "", "data-date-format" => "yyyy-mm-dd", "data-link-field" => "dtp_input2", "data-link-format" => "yyyy-mm-dd"}
                        = text_field_tag :final_date ,'' ,:class => "form-control", :readonly => true
                        %span.input-group-addon
                          %span.glyphicon.glyphicon-remove
                        %span.input-group-addon
                          %span.glyphicon.glyphicon-calendar
                      %input#dtp_input2{:type => "hidden", :value => ""}/
                      %br/
                .container
                .row
                  .col-md-8.col-sm-10.col-xs-12.col-md-offset-2.text-center
                    %label.col-md-12.col-xs-4.control-label.text-center.h4{:for => "dtp_input2"}
                      = t('stadistics.chart_type')
                    =select_tag :chart_type ,options_for_select([[t('stadistics.bar') , "1" ], [t('stadistics.line') , "2" ], [t('stadistics.donut') , "3" ],[t('stadistics.radar') , "4" ],[t('stadistics.pie') , "5" ]]), :class => 'selectpicker btn col-md-4 col-md-offset-4 col-sm-4 col-xs-4'
                    =hidden_field_tag :modal_tab, "1"
              .modal-footer
              =submit_tag t('stadistics.create_chart'), :class => 'btn btn-default pull-right', :name => 'product-button'
              
              
              
