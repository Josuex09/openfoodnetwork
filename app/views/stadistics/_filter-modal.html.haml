#filterModal.modal.fade.bd-example-modal-lg{:role => "dialog"}
  .modal-dialog.modal-lg
    / Modal content
    .modal-content
      .modal-header
        %button.close{"data-dismiss" => "modal", :type => "button"} Ã—
        %h4.modal-title.text-center Create new chart
        .nav-center
          %ul.nav.nav-tabs.center-pills
            %li.active{:role => "presentation" , :id => "product-modal-button" }
              %a{:href => "#product-tab","data-toggle" => "tab"} Products
            %li{:role => "presentation", :id => "producer-modal-button"}
              %a{:href => "#producer-tab", "data-toggle" => "tab"} Producers
            %li{:role => "presentation", :id => "hubs-modal-button"}
              %a{:href => "#hubs-tab", "data-toggle" => "tab"} Hubs
      .modal-body
        / Calendario Inicio
        .tab-content
          #product-tab.tab-pane.active
            =form_tag 'index',:remote => true do
              .container
                .row
                  .col-md-8.col-sm-10.col-xs-12.col-md-offset-2
                    .form-group
                      %label.col-md-12.col-xs-4.control-label.text-center.h4{:for => "dtp_input1"} Initial date
                      .input-group.date.form_date.col-md-12{"data-date" => "", "data-date-format" => "yyyy-mm-dd", "data-link-field" => "dtp_input2", "data-link-format" => "yyyy-mm-dd"}
                        = text_field_tag :initial_date ,'' ,:class => "form-control", :readonly => true
                        %span.input-group-addon
                          %span.glyphicon.glyphicon-remove
                        %span.input-group-addon
                          %span.glyphicon.glyphicon-calendar
                      %input#dtp_input1{:type => "hidden", :value => ""}/
                      %br/
              .container
                .row
                  .col-md-8.col-sm-10.col-xs-12.col-md-offset-2
                    .form-group
                      %label.col-md-12.col-xs-4.control-label.text-center.h4{:for => "dtp_input2"} Final date 
                      .input-group.date.form_date.col-md-12{"data-date" => "", "data-date-format" => "yyyy-mm-dd", "data-link-field" => "dtp_input2", "data-link-format" => "yyyy-mm-dd"}
                        = text_field_tag :final_date ,'' ,:class => "form-control", :readonly => true
                        %span.input-group-addon
                          %span.glyphicon.glyphicon-remove
                        %span.input-group-addon
                          %span.glyphicon.glyphicon-calendar
                      %input#dtp_input2{:type => "hidden", :value => ""}/
                      %br/
                .container
                .row
                  .col-md-8.col-sm-10.col-xs-12.col-md-offset-2.text-center
                    %label.col-md-12.col-xs-4.control-label.text-center.h4{:for => "dtp_input2"} Chart Type
                    =select_tag :chart_type ,options_for_select([["Bar" , "1" ], ["Line" , "2" ], ["Donut" , "3" ],["Radar" , "4" ],["Pie" , "5" ]]), :class => 'selectpicker btn col-md-4 col-md-offset-4 col-sm-4 col-xs-4'
                    =hidden_field_tag :modal_tab, "1"
              .modal-footer
              =submit_tag "Create Chart", :class => 'btn btn-default pull-right', :name => 'product-button'
              
              
              
          #producer-tab.tab-pane
            =form_tag 'index',:remote => true do
              .container
                .row
                  .col-md-8.col-sm-10.col-xs-12.col-md-offset-2.col-sm-offset-1.text-center
                    %h4{:for => "dtp_input1"} Filter Option
                    =select_tag :producer_option_type ,options_for_select([["New producers" , "1" ], ["Producers per region" , "2" ]]), :class => 'selectpicker btn producerfilterpicker col-md-6 col-md-offset-3 col-xs-offset-3 col-sm-offset-3 col-sm-6 col-xs-6'
              .container.producer-period-container  
                .row
                  .col-md-8.col-sm-10.col-xs-12.col-md-offset-2.col-sm-offset-1.text-center.producer_period-container
                    %h4 Period
                    =select_tag :producer_period ,options_for_select([["Year" , "Year" ], ["Month" , "Month" ],["Week" , "Week" ]]), :class => 'selectpicker btn col-md-4 col-md-offset-4 col-xs-offset-4 col-sm-offset-4 col-sm-4 col-xs-4'
              .container  
                .row
                  .col-md-8.col-sm-10.col-xs-12.col-md-offset-2.col-sm-offset-1.text-center
                    %h4 Chart type
                    =select_tag :producer_chart_type ,options_for_select([["Bar" , "1" ], ["Lines" , "2" ],["Donut" , "3" ],["Radar" , "4" ],["Pie" , "5" ]]), :class => 'selectpicker btn col-md-4 col-md-offset-4 col-xs-offset-4 col-sm-offset-4 col-sm-4 col-xs-4'
                    =hidden_field_tag :modal_tab, "2"
                .modal-footer
                =submit_tag "Create Chart", :class => 'btn btn-default pull-right', :name => 'producer-button'
      
      
          #hubs-tab.tab-pane
            =form_tag 'index',:remote => true do
              .container
                .row
                  .col-md-8.col-sm-10.col-xs-12.col-md-offset-2.col-sm-offset-1.text-center
                    %h4{:for => "dtp_input1"} Filter Option
                    =select_tag :hubs_option_type ,options_for_select([["New hubs per month" , "1" ], ["Hubs per region" , "2" ]]), :class => 'selectpicker btn hubfilterpicker col-md-6 col-md-offset-3 col-xs-offset-3 col-sm-offset-3 col-sm-6 col-xs-6'
              .container.hub-period-container  
                .row
                  .col-md-8.col-sm-10.col-xs-12.col-md-offset-2.col-sm-offset-1.text-center.hub_period-container 
                    %h4 Period
                    =select_tag :hub_period ,options_for_select([["Year" , "Year" ], ["Month" , "Month" ],["Week" , "Week" ]]), :class => 'selectpicker btn col-md-4 col-md-offset-4 col-xs-offset-4 col-sm-offset-4 col-sm-4 col-xs-4'                   
              .container
                .row                    
                  .col-md-8.col-sm-10.col-xs-12.col-md-offset-2.col-sm-offset-1.text-center
                    %h4 Chart type
                    =select_tag :hubs_chart_type ,options_for_select([["Bar" , "1" ], ["Lines" , "2" ],["Donut" , "3" ],["Radar" , "4" ],["Pie" , "5" ]]), :class => 'selectpicker btn col-md-4 col-md-offset-4 col-xs-offset-4 col-sm-offset-4 col-sm-4 col-xs-4'
                    =hidden_field_tag :modal_tab, "3"
                .modal-footer
                =submit_tag "Create Chart", :class => 'btn btn-default pull-right', :name => 'hubs-button'

- content_for :javascripts do
  = javascript_include_tag "stadistics/bootstrap-datetimepicker"
  :javascript
    $('.form_date').datetimepicker({
      weekStart: 1,
      todayBtn:  1,
      autoclose: 1,
      todayHighlight: 1,
      startView: 2,
      minView: 2,
      forceParse: 0
    });
    
    $(".producerfilterpicker").click(function(){
      if ($(this).val() === "1"){
        $(".producer-period-container").show(); 
      }
      else{
        $(".producer-period-container").hide();
      }
    });
    


    $(".hubfilterpicker").click(function(){
      if ($(this).val() === "1"){
        $(".hub-period-container").show(); 
      }
      else{
        $(".hub-period-container").hide();
      }
    });





