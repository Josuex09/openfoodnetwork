%body.nav-md
  .container.body
    .main_container
      .col-md-3.left_col
        .left_col.scroll-view
          .navbar.nav_title{:style => "border: 0;"}
            %a.site_title{:href => "/"} Open Food Network          
            /%img.titleicon{:src => "/assets/mini.png",:href => "/"}            
          .clearfix
          %br/
          / sidebar menu
          #sidebar-menu.main_menu_side.hidden-print.main_menu
            .menu_section
              %h3 General
              %ul.nav.side-menu
                %li
                  %a
                    %i.fa.fa-home
                    EstadÃ­sticas
                    %span.fa.fa-chevron-down
